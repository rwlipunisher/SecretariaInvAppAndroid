<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintofbasicinfoform">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:text="Formulário de Dados Básicos"
            android:textSize="30dp"
            android:id="@+id/titlebasicinfoform"
            app:layout_constraintTop_toTopOf="@+id/constraintofbasicinfoform"
            tools:layout_editor_absoluteX="2dp" />


        <EditText
            android:id="@+id/fullName"
            android:layout_width="409dp"
            android:layout_height="66dp"
            android:layout_marginTop="68dp"
            android:hint="Digite aqui seu nome completo"
            app:layout_constraintTop_toBottomOf="@+id/titlebasicinfoform"
            tools:layout_editor_absoluteX="2dp" />

        <EditText
            android:id="@+id/cpf"
            android:layout_width="409dp"
            android:layout_height="66dp"
            android:layout_marginTop="44dp"
            android:hint="Digite aqui Seu CPF"
            app:layout_constraintTop_toBottomOf="@id/fullName"
            tools:layout_editor_absoluteX="2dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="409dp"
                android:layout_height="66dp"
                android:layout_marginTop="72dp"
                android:hint="Data de Nascimento"
                android:inputType="date"
                app:layout_constraintTop_toBottomOf="@+id/spinner2"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/button_save_basic_info"
                android:layout_width="143dp"
                android:layout_height="56dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="8dp"
                android:text="Salvar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner3"
                tools:ignore="MissingConstraints" />

            <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/complete_name"
            app:layout_constraintBottom_toTopOf="@+id/fullName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="84dp"
            android:text="CPF"
            app:layout_constraintBottom_toBottomOf="@+id/cpf"
            app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                android:text="Data de Nascimento"
                app:layout_constraintBottom_toTopOf="@+id/editText"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:text="Estado Civil"
                app:layout_constraintBottom_toTopOf="@+id/spinner3"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp"
            android:text="Genero"
            app:layout_constraintBottom_toTopOf="@+id/spinner2"
            app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="413dp"
                android:layout_height="60dp"
                android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/cpf"
                tools:layout_editor_absoluteX="-2dp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="411dp"
                android:layout_height="60dp"
                android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                tools:layout_editor_absoluteX="0dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChurchInfo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintchurchinfo3">

        <TextView
            android:id="@+id/titlebasicinfoform2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dados de Sua Igreja"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="@+id/constraintchurchinfo3"
            tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Data de Entrada"
                app:layout_constraintBottom_toTopOf="@+id/editTextText2"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:text="Igreja de Origem"
            app:layout_constraintBottom_toTopOf="@+id/spinner5"
            tools:layout_editor_absoluteX="23dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="Data de Batismo"
            app:layout_constraintBottom_toTopOf="@+id/editTextText3"
            tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Função na Igreja"
                app:layout_constraintBottom_toTopOf="@+id/spinner4"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
            android:id="@+id/editTextText2"
            android:layout_width="406dp"
            android:layout_height="59dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@+id/spinner4"
            tools:layout_editor_absoluteX="5dp" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="406dp"
            android:layout_height="59dp"
            android:layout_marginTop="88dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@+id/spinner5"
            tools:layout_editor_absoluteX="1dp" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="404dp"
            android:layout_height="52dp"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/titlebasicinfoform2"
            tools:layout_editor_absoluteX="3dp" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="404dp"
            android:layout_height="52dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextText2"
            tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/button_save_churc"
                android:layout_width="124dp"
                android:layout_height="53dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="144dp"
                android:text="Save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

            <CheckBox
                android:id="@+id/checkBoxBatismo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="8dp"
                android:text="Não Sou Batizado"
                app:layout_constraintBottom_toTopOf="@+id/editTextText3"
                app:layout_constraintStart_toEndOf="@+id/textView16" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>
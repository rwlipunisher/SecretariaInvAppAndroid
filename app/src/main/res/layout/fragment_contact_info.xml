<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContactInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contraintdadoscontactinfo">

            <TextView
                android:id="@+id/titlebasicinfoform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="FormulÃ¡rio Dados de Contato"
                android:textSize="30dp"
                app:layout_constraintTop_toTopOf="@+id/contraintdadoscontactinfo"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/buttonSaveContatcInfo"
                android:layout_width="123dp"
                android:layout_height="51dp"
                android:layout_marginTop="112dp"
                android:layout_marginEnd="144dp"
                android:text="Salvar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTextTextPostalAddress" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:text="Telefone(Whatsapp)"
                app:layout_constraintBottom_toTopOf="@+id/editTextPhone"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="410dp"
                android:layout_height="51dp"
                android:layout_marginTop="80dp"
                android:hint="DD 9 SEUNUMERO"
                android:ems="10"
                android:inputType="phone"
                app:layout_constraintTop_toBottomOf="@+id/titlebasicinfoform"
                tools:layout_editor_absoluteX="1dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="208dp"
                android:layout_marginBottom="4dp"
                android:text="Numero"
                app:layout_constraintBottom_toTopOf="@+id/editTextText"
                app:layout_constraintStart_toEndOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="CEP"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPostalAddress"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/editTextTextPostalAddress"
                android:layout_width="229dp"
                android:layout_height="47dp"
                android:layout_marginTop="44dp"
                android:ems="10"
                android:hint="CEP"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@+id/editTextPhone"
                tools:layout_editor_absoluteX="1dp" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="153dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="44dp"
                android:ems="10"
                android:hint="Numero"
                android:inputType="text"
                app:layout_constraintStart_toEndOf="@+id/editTextTextPostalAddress"
                app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</FrameLayout>